@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - StyleApp</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <!-- Enlace al archivo CSS de SweetAlert -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.3/dist/sweetalert2.min.css" rel="stylesheet" />

</head>
<body>
    <div class="overlay"></div> <!-- Capa oscura sobre la imagen -->
    <div class="login-container">

        <div class="login-box">
            <h2>Inicio De Secion</h2>
            <form onsubmit="event.preventDefault(); login();">
                <div class="input-group">
                    <label for="username">ID Usuario:</label>
                    <input type="text" id="idUsuario" name="username" required>
                </div>
                <div class="input-group">
                    <label for="password">Usuario:</label>
                    <input type="password" id="usuario" name="password" required>
                </div>
                <button class="btn-accion btn-login" type="submit">Entrar</button>
                <button class="btn-accion btn-register" onclick="window.location.href='/Register/RegistroPage'">Registrarse</button>

            </form>

        </div>
    </div>
    <!-- Enlace al archivo JavaScript de SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.3/dist/sweetalert2.all.min.js"></script>

    <script src="~/js/login.js"></script>

</body>
</html>